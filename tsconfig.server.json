{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "rootDir": "./server",
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "express", "cors"]
  },
  "include": ["server/**/*"],
  "exclude": ["dist", "src", "postcss.config.js", "tailwind.config.js"]
}
