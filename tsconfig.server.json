{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "rootDir": "./server",
    "module": "Node16",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "types": [  
      "node",
      "express",
      "cors"
    ]
  },
  "include": [
    "server/**/*"
  ],
  "exclude": [
    "dist",
    "src",
    "postcss.config.js",
    "tailwind.config.js"
  ]
}